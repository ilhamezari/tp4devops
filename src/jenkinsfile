pipeline {
    environment {
        registry = "ilhamez/tp4dev"
        registryCredential = 'docker_id'
    }
    agent any
    stages {
        stage('Cloning Git') {
            steps {
                git 'https://github.com/ilhamez/tp4devops'
            }
        }
        stage('Copy Dockerfile') {
            steps {
                // Assuming the Dockerfile is in the 'src' directory
                // Adjust the path if needed
                sh 'cp src/Dockerfile .'
            }
        }
        stage('Building image') {
            steps {
                script {
                    docker.build("${registry}:$BUILD_NUMBER", ".Dockerfile")
                }
            }
        }
        stage('Test image') {
            steps {
                script {
                    // Replace with your actual test commands
                    sh 'Test passed'
                }
            }
        }
        stage('Publish Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', registryCredential) {
                        docker.image("${registry}:$BUILD_NUMBER").push()
                    }
                }
            }
        }
    }
}
